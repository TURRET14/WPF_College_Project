<Window x:Class="_222_Emelyanenko.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_222_Emelyanenko"
        mc:Ignorable="d"
        Title="ИС Заказы" Height="450" Width="800" Loaded="Window_Loaded" Icon="/Icon.ico" Closing="Window_Closing">
    <Grid>
        <!--Главная страница приложения-->
        <Grid.RowDefinitions>
            <RowDefinition Height="45"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="45"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <!--Навигация-->
            <Button Grid.Column="0" Click="Back_Button_Click" ToolTip="Вернуться к предыдущей странице">Назад</Button>
            <Button Grid.Column="1" Click="Style_Button_Click" ToolTip="Сменить словарь стилей">Сменить словарь стилей</Button>
        </Grid>
        <!--Основной контент-->
        <Frame Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden" Source="/AuthPage.xaml"></Frame>
        <!--Дата и время-->
        <TextBlock Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center" Name="DateTimeNow" ToolTip="Дата и время"></TextBlock>
    </Grid>
</Window>
