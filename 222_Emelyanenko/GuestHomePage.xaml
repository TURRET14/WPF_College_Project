<Page x:Class="_222_Emelyanenko.GuestHomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_222_Emelyanenko"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage">

    <Grid>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Name="UsersTableButton" Click="UsersTableButton_Click">Таблица пользователей</Button>
            <Button Grid.Column="1" Name="CategoryTableButton" Click="CategoryTableButton_Click">Таблица категорий</Button>
            <Button Grid.Column="2" Name="PaymentTableButton" Click="PaymentTableButton_Click">Таблица платежей</Button>
            <Button Grid.Column="3" Name="DiagramTableButton" Click="DiagramTableButton_Click">Диаграммы</Button>
        </Grid>
    </Grid>
</Page>
