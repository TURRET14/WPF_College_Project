<Page x:Class="_222_Emelyanenko.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_222_Emelyanenko"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="45"></RowDefinition>
            <RowDefinition Height="45"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="45"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" FontWeight="Bold">Вход</Label>

        <Label Grid.Column="0" Grid.Row="1">Логин</Label>
        <TextBox Grid.Column="1" Grid.Row="1" Name="Login_Input"></TextBox>
        
        <Label Grid.Column="0" Grid.Row="2">Пароль</Label>
        <PasswordBox Grid.Column="1" Grid.Row="2" Name="Password_Input"></PasswordBox>

        <Label Grid.Row="3" Grid.Column="0" Name="CaptchaLabel" Visibility="Collapsed" Height="35">Captcha</Label>
        <TextBox Grid.Row="3" Grid.Column="1" Name="CaptchaText" IsReadOnly="True" Visibility="Collapsed" Height="35" FontWeight="Bold" CommandManager.PreviewExecuted="CaptchaText_PreviewExecuted"></TextBox>
        <Grid Grid.Row="4" Grid.ColumnSpan="2" Name="CaptchaGrid" Visibility="Collapsed" Height="45">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" Name="CaptchaInput"></TextBox>
            <Button Grid.Column="1" Name="CaptchaValidate" Click="CaptchaValidate_Click">Проверить</Button>
        </Grid>
        <Button Grid.Row="5" Grid.ColumnSpan="2" Click="Login_Click">Войти</Button>
    </Grid>
</Page>
